{
  "info": {
    "_postman_id": "ridewave-live-collection-v1",
    "name": "Ridewave API (Live on Render)",
    "description": "Postman collection for the deployed Ridewave backend on Render, including authentication, rides, and payments endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup (User)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"John Rider\",\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\",\n  \"role\": \"rider\"\n}"
        },
        "url": {
          "raw": "https://ridewave-backend-vfhb.onrender.com/api/auth/signup",
          "protocol": "https",
          "host": ["ridewave-backend-vfhb", "onrender", "com"],
          "path": ["api", "auth", "signup"]
        }
      }
    },
    {
      "name": "Login (User)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "https://ridewave-backend-vfhb.onrender.com/api/auth/login",
          "protocol": "https",
          "host": ["ridewave-backend-vfhb", "onrender", "com"],
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Get Logged In User (/me)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "https://ridewave-backend-vfhb.onrender.com/api/auth/me",
          "protocol": "https",
          "host": ["ridewave-backend-vfhb", "onrender", "com"],
          "path": ["api", "auth", "me"]
        }
      }
    },
    {
      "name": "Request Ride",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"pickup\": \"Kilimani\",\n  \"destination\": \"CBD\",\n  \"fare\": 350\n}"
        },
        "url": {
          "raw": "https://ridewave-backend-vfhb.onrender.com/api/rides/request",
          "protocol": "https",
          "host": ["ridewave-backend-vfhb", "onrender", "com"],
          "path": ["api", "rides", "request"]
        }
      }
    },
    {
      "name": "Accept Ride (Driver)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "https://ridewave-backend-vfhb.onrender.com/api/rides/accept/{{rideId}}",
          "protocol": "https",
          "host": ["ridewave-backend-vfhb", "onrender", "com"],
          "path": ["api", "rides", "accept", "{{rideId}}"]
        }
      }
    },
    {
      "name": "Complete Ride (Driver)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": {
          "raw": "https://ridewave-backend-vfhb.onrender.com/api/rides/complete/{{rideId}}",
          "protocol": "https",
          "host": ["ridewave-backend-vfhb", "onrender", "com"],
          "path": ["api", "rides", "complete", "{{rideId}}"]
        }
      }
    },
    {
      "name": "STK Push Payment (Rider)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phoneNumber\": \"254712345678\",\n  \"amount\": 350,\n  \"rideId\": \"{{rideId}}\"\n}"
        },
        "url": {
          "raw": "https://ridewave-backend-vfhb.onrender.com/api/payments/stkpush",
          "protocol": "https",
          "host": ["ridewave-backend-vfhb", "onrender", "com"],
          "path": ["api", "payments", "stkpush"]
        }
      }
    },
    {
      "name": "My Payments (Rider)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "https://ridewave-backend-vfhb.onrender.com/api/payments/mine",
          "protocol": "https",
          "host": ["ridewave-backend-vfhb", "onrender", "com"],
          "path": ["api", "payments", "mine"]
        }
      }
    },
    {
      "name": "All Payments (Admin Only)",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "https://ridewave-backend-vfhb.onrender.com/api/payments/all",
          "protocol": "https",
          "host": ["ridewave-backend-vfhb", "onrender", "com"],
          "path": ["api", "payments", "all"]
        }
      }
    }
  ],
  "variable": [
    { "key": "token", "value": "" },
    { "key": "rideId", "value": "" }
  ]
}
