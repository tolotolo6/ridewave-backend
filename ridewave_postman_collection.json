{
  "info": {
    "name": "Ridewave API Final",
    "_postman_id": "ridewave-final-collection-002",
    "description": "Postman collection for Ridewave API with authentication, rides, and payments.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Signup (Rider)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"John Rider\",\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\",\n  \"phone\": \"254712345678\",\n  \"role\": \"rider\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/auth/signup",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "auth", "signup"]
        }
      }
    },
    {
      "name": "Login (Rider)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"john@example.com\",\n  \"password\": \"123456\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "auth", "login"]
        }
      }
    },
    {
      "name": "Request Ride (Rider)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{riderToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"pickup\": \"Kilimani\",\n  \"destination\": \"CBD\",\n  \"fare\": 350\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/rides/request",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "rides", "request"]
        }
      }
    },
    {
      "name": "Accept Ride (Driver)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{driverToken}}" }
        ],
        "body": { "mode": "raw", "raw": "{}" },
        "url": {
          "raw": "http://localhost:3000/api/rides/accept/{{rideId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "rides", "accept", "{{rideId}}"]
        }
      }
    },
    {
      "name": "Complete Ride (Driver)",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{driverToken}}" }
        ],
        "body": { "mode": "raw", "raw": "{}" },
        "url": {
          "raw": "http://localhost:3000/api/rides/complete/{{rideId}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "rides", "complete", "{{rideId}}"]
        }
      }
    },
    {
      "name": "STK Push Payment (Rider)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{riderToken}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"phoneNumber\": \"254712345678\",\n  \"amount\": 350,\n  \"rideId\": \"{{rideId}}\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/payment/stkpush",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "payment", "stkpush"]
        }
      }
    },
    {
      "name": "My Payments (Rider)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{riderToken}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/payment/mine",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "payment", "mine"]
        }
      }
    },
    {
      "name": "All Payments (Admin Only)",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{adminToken}}" }
        ],
        "url": {
          "raw": "http://localhost:3000/api/payment/all",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "payment", "all"]
        }
      }
    }
  ]
}
